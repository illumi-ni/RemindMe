<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    tools:context=".ProjectTaskMember">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/colorButton"
        app:tabSelectedTextColor="@color/colorButton"
        app:tabTextColor="@color/colorTextPrimary"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerProject"
        android:layout_width="419dp"
        android:layout_height="553dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayoutProject" />

</androidx.constraintlayout.widget.ConstraintLayout>