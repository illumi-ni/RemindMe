<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#e9e9e9">

        <ImageView
            android:id="@+id/imgproject"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="2dp"
            android:src="@drawable/ic_project" />

        <TextView
            android:id="@+id/txtprojectname"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_toStartOf="@+id/txtprojectdesc"
            android:layout_toEndOf="@+id/imgproject"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Project Name"
            android:textColor="@color/mineshaft"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtprojectdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtprojectname"
            android:layout_marginStart="11dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/imgproject"
            android:text="Project Description"
            android:textColor="#3E3E3E"
            android:textSize="16dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>